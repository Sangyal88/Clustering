im = imread('Images/peppers.png');
if (size(im,3) ~= 1)    % for color image size(im,3)==3
    im1 = rgb2gray(im);   %converting to grayscale
elseif (size(im,3) == 1)
    im1 = im;
end
Ck = 999;
[row,col]=size(im1);
X=int16(im1);
A=double(X);
m=zeros(row,col);
min=double(m);
[mindistvalue, index_i, index_j, Mdist]= pointdistance(A, 1, 2, Ck);
fprintf('\n');
fprintf('MinVal=%i', mindistvalue);
fprintf('\n');
fprintf('index_i=%i, index_j=%i',index_i,index_j);
fprintf('\n');
